<IfModule mod_rewrite.c>
    RewriteEngine On

    # Presmerovanie www → non-www
    RewriteCond %{HTTP_HOST} ^www\.mojarrezervacia\.sk [NC]
    RewriteRule ^(.*)$ https://mojarrezervacia.sk/$1 [L,R=301]

    # Presmerovanie všetkého do 'public/'
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]

    # Laravel Front Controller (už vo vnútri public/)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ public/index.php [L]
</IfModule>
